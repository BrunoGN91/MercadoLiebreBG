
    <%- include('./partials/head.ejs') %>

    <body>
        <!--Header-->
        <%- include('./partials/header.ejs') %>
        <!--Main-->
        <main>
           <section class="edit-page-section">
               <div class="bgeditpanel01">
                   <p class="edit-title"> Edición del producto</p>
               </div>
               <form action="/products/edit/<%=product.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
               <div class="edit_contents">
                       <div class="item-edit-properties">
                        <p name="id"style="color:rgba(255, 137, 58, 0.815); font-size: 2rem">ID:<%= product.id%></p> 
                        <p>Categorias</p>
                        <select class="categories" name="category" id="category" id="" value="<%=product.category%>">
                            <option value="accesories" <%= product.category == 'accesories'? 'selected': null %>>Hogar</option>
                            <option value="bags" <%= product.category == 'bags'? 'selected': null %>>Toy</option>
                            <option value="clubs" <%= product.category == 'clubs'? 'selected': null %>>Limpieza</option>
                            <option value="shoes" <%= product.category == 'shoes'? 'selected': null %>>Electro</option>
                            <option value="sets" <%= product.category == 'sets'? 'selected': null %>>Moda</option>
                        </select>
                        <p>Nombre del producto</p>  
                        <input type="text" name="name" id="name" placeholder="Nombre" value="<%= product.name %>">
                        <p>Descripción</p>
                        <textarea class="edit-description"  id="description" name="description" placeholder="Agregue una descripción" value=""><%= product.description%></textarea>
                        <p>Precio</p>
                        <input type="text" name="price" id="price" value="<%= product.price%>" placeholder="Ej. $ 1,500">
                        <p>Marca</p>
                        <input type="text" name="brand" id="brand" value="<%= product.brand%>"placeholder="" >
                    </div>
                      
    
                      
                   
                    <div class="second_panel_img_edit">
                        
                        <img src="<%=product.image%>" alt="">
                        <label for="">Insertar la imagen nueva</label>
                        <input type="file" name="productimg" value="<%=product.image%>">
                        
                        <button type="submit" class="save-changes-button">Guardar Cambios</button>
                    </div>
                </div>
            </form>
                
               
           </section>
          
        </main>
    
        <!--footer-->
    
        <%-include('./partials/footer.ejs') %>
    </body>